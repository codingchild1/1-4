<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
							"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mulcam.run.dao.RouteDAO">

	<insert id="insertRoute" parameterType="route">
		insert into route (route_articleNo, user_id, route_title, route_thumb, route_date, route_views, route_likes,
			route_content, route_mapinfo, route_area, route_distance, warning)
		values (#{route_articleNo}, #{user_id}, #{route_title}, #{route_thumb}, now(), #{route_views}, #{route_likes}, 
			#{route_content}, #{route_mapinfo}, #{route_area}, #{route_distance}, #{warning})
	</insert>
	
	<select id="routeAllList" resultType="route">
		select * from route
	</select>

</mapper>
