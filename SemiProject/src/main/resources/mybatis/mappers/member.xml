<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
			"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mulcam.run.dao.MemberDAO">
	<select id="queryMember" resultType="Member" parameterType="String">
		<![CDATA[
			select * from member where id=#{id}
		]]>
	</select>
	<insert id="insertMember" parameterType="Member">
		<![CDATA[
			insert into member(id, name, password, email, phone, joindate, adminCK) values(#{id}, #{name}, #{password}, #{email}, #{phone}, sysdate(), 0)

		]]>
	</insert>
	<select id="memberList" parameterType="Member" resultType="com.mulcam.run.dto.Member">
		<![CDATA[
			select id, name, password, email, phone from member order by name
		]]>
	</select>
	<delete id="delmember" parameterType="Member">
		<![CDATA[
			delete * from member where id=#{id}
		]]>
	</delete>
	<update id="updatemypage" parameterType="Member">
		update member set password=#{password}, email=#{email}, phone=#{phone}
		where id = #{id} and name=#{name}
	</update>
</mapper>

